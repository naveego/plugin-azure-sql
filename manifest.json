{
    "name": "pub-mssql",
    "displayName": "Microsoft SQL Server Publisher",
    "description": "Publisher which pulls data from an MS SQL Server instance.",
    "versionDescription": "Version 2",
    "version": "2.0.0",
    "iconFile": "icon.png",
    "executable": "plugin-pub-mssql",
    "kind": "publisher",
  "canProduceMultipleSchemas": true,
  "canAcceptQueryBasedSchemas": true,
  "querySchema": {
    "ui": {
      "ui:widget": "code",
      "ui:options": {
        "language": "sql"
      }
    },
    "schema": {
      "type":"string"
    }
  },
  "configSchema": {
    "ui": {
      "ui:order": ["server","database","auth","username","password","prePublishQuery","postPublishQuery"],
      "password": {
        "ui:widget": "password"
      },
      "prePublishQuery": {
        "ui:widget": "textarea"
      },
      "postPublishQuery": {
        "ui:widget": "textarea"
      }
    },
    "schema": {
      "type": "object",
      "properties": {
        "server": {
          "type": "string",
          "title": "Server"
        },
        "database": {
          "type": "string",
          "title": "Database"
        },
        "auth": {
          "type": "string",
          "title": "Authentication",
          "enum": [
            "sql",
            "windows"
          ]
        },
        "username": {
          "type": "string",
          "title": "Username"
        },
        "password": {
          "type": "string",
          "title": "Password"
        },
        "prePublishQuery": {
          "title": "Pre-publish Query",
          "description": "Optional query to be run before a publish begins.",
          "type": "string"
        },
        "postPublishQuery": {
          "title": "Post-publish Query",
          "description": "Optional query to be run after a publish completes.",
          "type": "string"
        }
      },
      "required":[
        "server",
        "database",
        "auth"
      ]
    }
  }
}